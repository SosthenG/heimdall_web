<form method="get" action="{{ action }}" enctype="application/x-www-form-urlencoded" class="form-inline">

    <div class="form-group mx-sm-3 mb-2">
        <select name="{{ filterFieldName }}" class="select2">
            {% for field, label in fields %}
                <option value="{{ field }}"{% if selectedField == field %} selected="selected"{% endif %}>{{ label }}</option>
            {% endfor %}
        </select>
    </div>

    <div class="form-group mx-sm-3 mb-2">
        <input type="text" class="form-control" value="{{ selectedValue }}" name="{{ filterValueName }}"/>
    </div>

    <button type="submit" class="btn btn-primary mb-2">{{ options.button }}</button>
</form>
