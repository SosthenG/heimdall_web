{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block container %}
    <h1>Student index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Photo</th>
                <th>Username</th>
                <th>Email</th>
                <th>Groupe</th>
                <th>actions</th>

            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{% if student.photo is not null %}<img src="{{ asset('/students/photos/') ~ student.photo }}" alt="photo" width="60px">{% endif %}</td>
                <td>{{ student.username }}</td>
                <td>{{ student.email }}</td>
                <td>{{ student.ClassGroup.name }}</td>
                <td>
                    <a class="btn btn-link btn-xs text-info" title="{{ 'see_details'|trans }}" data-toggle="tooltip" href="{{ path('student_show', {'id': student.id}) }}"><i class="fa fa-eye" aria-hidden="true"></i></a>
                    <a class="btn btn-link btn-xs text-warning" title="{{ 'edit'|trans }}" data-toggle="tooltip" href="{{ path('student_edit', {'id': student.id}) }}"><i class="fa fa-edit" aria-hidden="true"></i></a>
                    {% include 'ui/_delete_form.html.twig' with { id: student.id, path: 'student_delete', min: true } %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('student_new') }}" class="btn btn-success">Create new</a>
    <a href="{{ path('student_import') }}" class="btn btn-primary">Import from spreadsheet/csv</a>
{% endblock %}
