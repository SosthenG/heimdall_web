{% extends 'base.html.twig' %}

{% block title %}ClassGroup{% endblock %}

{% block body %}
    <h1>ClassGroup</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ class_group.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ class_group.name }}</td>
            </tr>
        </tbody>
    </table>

    <h1>Students</h1>
    <ul>
        {% for student in class_group.students %}
            <li>{{ student.id }}</li>
            <li>{{ student.username }}</li>
            <br>
        {% endfor %}
    </ul>

    <h1>Teachers</h1>
    <ul>
        {% for teacher in class_group.teachers %}
            <li>{{ teacher.id }}</li>
            <li>{{ teacher.username }}</li>
            <br>
        {% endfor %}
    </ul>

    <a href="{{ path('class_group_index') }}" class="btn btn-secondary">back to list</a>

    <a href="{{ path('class_group_edit', {'id': class_group.id}) }}">edit</a>

    {{ include('class_group/_delete_form.html.twig') }}
{% endblock %}
