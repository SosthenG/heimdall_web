{% extends 'base.html.twig' %}

{% block title %}ClassGroup{% endblock %}

{% block container %}
    <h4>Classes</h4>
    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>

            </tr>
            <tr>
                <td>{{ class_group.name }}</td>
            </tr>
        </tbody>
    </table>

    <h4 >Etudiants</h4>
    <table class="table">
        <tbody>
        <tr>
            <th>Nom d'utilisateur</th>
            <th>Prénom</th>
            <th>Nom</th>
        </tr>
        {% for student in class_group.students %}
            <tr>
                <td>{{ student.username }}</td>
                <td>{{ student.firstname }}</td>
                <td>{{ student.lastname }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>

    <h4 class="">Professeurs</h4>
    <table class="table">
        <tbody>
        <tr>
            <th>Nom d'utilisateur</th>
            <th>Prénom</th>
            <th>Nom</th>
        </tr>
        {% for teacher in class_group.teachers %}
            <tr>
                <td>{{ teacher.username }}</td>
                <td>{{ teacher.firstname }}</td>
                <td>{{ teacher.lastname }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <br>

    <a href="{{ path('class_group_index') }}" class="btn btn-secondary">Retour à la liste</a>

    <a href="{{ path('class_group_edit', {'id': class_group.id}) }}" class="btn btn-warning">Modifier</a>

    {{ include('ui/_delete_form.html.twig', { path: 'class_group_delete', id: class_group.id }) }}
{% endblock %}
