{% extends 'base.html.twig' %}

{% block title %}Admin{% endblock %}

{% block container %}
    <h1>Admin</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ admin.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ admin.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ admin.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_index') }}" class="btn btn-secondary">Retour Ã  la liste</a>

    <a href="{{ path('admin_edit', {'id': admin.id}) }}" class="btn btn-warning">Modifier</a>

    {% if admin.id != app.user.id %}
        {% include 'ui/_delete_form.html.twig' with { id: admin.id, path: 'admin_delete' } %}
    {% endif %}
{% endblock %}
