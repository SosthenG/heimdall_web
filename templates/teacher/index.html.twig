{% extends 'base.html.twig' %}

{% block title %}Teacher index{% endblock %}

{% block container %}
    <h1>Teacher index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for teacher in teachers %}
            <tr>
                <td>{{ teacher.username }}</td>
                <td>{{ teacher.email }}</td>
                <td>
                    <a class="btn btn-link btn-xs text-info" title="{{ 'see_details'|trans }}" data-toggle="tooltip" href="{{ path('teacher_show', {'id': teacher.id}) }}"><i class="fa fa-eye" aria-hidden="true"></i></a>
                    <a class="btn btn-link btn-xs text-warning" title="{{ 'edit'|trans }}" data-toggle="tooltip" href="{{ path('teacher_edit', {'id': teacher.id}) }}"><i class="fa fa-edit" aria-hidden="true"></i></a>
                    {% include 'ui/_delete_form.html.twig' with { id: teacher.id, path: 'teacher_delete', min: true } %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('teacher_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
