{% extends 'base.html.twig' %}

{% block title %}Dashboard - Heimdall{% endblock %}

{% block body %}

    <h1>Liste des absences</h1>


    {% for studentpresence in absences %}
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{ studentpresence.student.username}} -
                {{ studentpresence.rollcall.classgroup.name}}
                <span class="badge badge-primary badge-pill">{{ studentpresence.rollcall.duration}}h</span>
            </li>
        </ul>
    {% else %}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Il n'y a pas d'absence Ã  ce jour.
        </li>
    {% endfor %}


    <div type="text" class="datepicker">

        <!--<span id="dateSelected"></span>-->



{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('.datepicker').datepicker({
            format: "dd/mm/yyyy",
            todayBtn: "linked",
            language: "fr",
            todayHighlight: true
        }).on('changeDate',function(e){
            window.location = '{{ url('dashboard') }}?date=' + e.format("yyyy-mm-dd");
            $('#dateSelected').text(e.format("dd/mm/yyyy"));
        });
    </script>
{% endblock %}
